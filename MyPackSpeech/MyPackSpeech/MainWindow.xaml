<Window x:Class="MyPackSpeech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyPack Speech" Height="530" Width="919">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="21" />
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Menu Grid.Column="1" Grid.ColumnSpan="4"> 
         <MenuItem Header="_File">
            <MenuItem Header="Load _Courses" Click="loadCourses_Click"></MenuItem>
            <MenuItem Header="Load _Student" Click="loadStudent_Click"></MenuItem>
         </MenuItem>
         <MenuItem Header="Requirements" Click="showReqs_Click"></MenuItem>
         <MenuItem Header="Courses" Click="showCourses_Click"></MenuItem>
        </Menu>
        <TextBox Grid.Row="1" Height="182" HorizontalAlignment="Left" Margin="11,38,0,0" Name="txtOutput" VerticalAlignment="Top" Width="874" TextChanged="txtOutput_TextChanged" />
        <Button Content="Start Speech Recognition" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="11,6,0,0" Name="button1" VerticalAlignment="Top" Width="148" Click="button1_Click" />
    </Grid>
</Window>