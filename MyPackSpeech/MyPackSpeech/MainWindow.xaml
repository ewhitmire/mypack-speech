<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyPackSpeech" x:Class="MyPackSpeech.MainWindow"
        Title="MyPack Speech" Height="530" Width="1107">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21" />
            <RowDefinition Height="159*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="Load _Courses" Click="loadCourses_Click"/>
                <MenuItem Header="Load _Student" Click="loadStudent_Click"/>
            </MenuItem>
            <MenuItem Header="Requirements" Click="showReqs_Click"/>
            <MenuItem Header="Courses" Click="showCourses_Click"/>
        </Menu>
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1" />
        <local:CourseControl Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Stretch" x:Name="courseViewer"
                             Width="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Canvas}},Path=ActualWidth}"
                             Height="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Canvas}},Path=ActualHeight}" Grid.RowSpan="2"
                             BorderThickness="1"
        />
        <GridSplitter Grid.Column="0" Grid.Row ="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" BorderThickness="1" Grid.RowSpan="1" Margin="0,0,2,0" RenderTransformOrigin="0.5,0.5" Width="12">
            
        </GridSplitter>
        <Button Content="Next" HorizontalAlignment="Left" Margin="46,66,0,0" Grid.Row="1" VerticalAlignment="Top" Width="Auto" x:Name="btnNext" Click="btnNextClick"/>
    </Grid>
</Window>