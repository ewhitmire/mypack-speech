<Window x:Class="MyPackSpeech.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartScreen" Height="420" Width="640" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label x:Name="TitleText" Content="Welcome to MyPackSpeech!" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" HorizontalContentAlignment="Center" Margin="8,0" Height="42"/>
        <Label x:Name="WelcomText" Content="Imagine that you are a college freshman planning out your Computer Science &#xD;&#xA;Major for the first time.  You have a list of requirements you need to take, and&#xD;&#xA;need to know what order in which to take them.  This prototype is a dialogue &#xD;&#xA;system meant to assist you with the basic functionality of this process.&#xA;&#xA;Commands are flexible in language.  You can identify a class with either class &#xD;&#xA;department and number, or with the name directly.  You can add a class, remove &#xD;&#xA;a class, move it to another semester. You can bookmark a class to save it for later,&#xD;&#xA;and ask about your requirements that you need to fill for your major.&#xA;&#xD;&#xA;&#xD;&#xA;To begin, you can ask &quot;What do I need to take to graduate?&quot;&#xA;" Margin="10,10,10,10" Grid.Row="1" FontSize="16"/>
        <Button x:Name="skip" Content="Skip" HorizontalAlignment="Left" Margin="541,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="skip_Click"/>

    </Grid>
</Window>
